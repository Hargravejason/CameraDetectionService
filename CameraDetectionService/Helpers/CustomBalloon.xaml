<UserControl x:Class="CameraDetectionService.Helpers.CustomBalloon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" >
	<Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Background="White">
		<StackPanel>
			<Border BorderBrush="Black" BorderThickness=".5" CornerRadius="5,5,0,0" Background="LightBlue">
				<TextBlock x:Name="BalloonTitleTextBlock" Margin="5,0,0,0" FontWeight="Bold" FontSize="14" Text="Camera Monitoring Service" />
			</Border>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5">
				<Image x:Name="IconImage" Width="48" Height="48" Margin="0,0,0,0" VerticalAlignment="Center"/>
				<StackPanel Margin="5,0,0,0" Width="230">
					<TextBlock x:Name="TitleTextBlock" FontWeight="Bold" FontSize="12" Text="" />
					<TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" Text="" />
				</StackPanel>
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>